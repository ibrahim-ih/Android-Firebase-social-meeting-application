<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:layout_marginTop="10dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileCirImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile"
        android:layout_gravity="left"/>
    <LinearLayout
        android:id="@+id/detailsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_toRightOf="@id/profileCirImageView">
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ibrahim Haouari"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"/>

            <TextView
                android:id="@id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 years "/>

<!--        <TextView
            android:id="@+id/placeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Engineer "/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_edit_location_black_24dp"
                />
            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La fontaine"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout></android.support.v7.widget.CardView>