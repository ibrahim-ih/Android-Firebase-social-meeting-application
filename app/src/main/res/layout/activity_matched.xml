<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ngenious.ibrahim.liny.activity.MatchedActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme"/>

    </android.support.design.widget.AppBarLayout>
<!--    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"/>-->
    <FrameLayout
        android:id="@+id/invitation_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<!--this textView will be added under recycler view-->
        <TextView
            android:id="@+id/seemore_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See More"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:visibility="gone"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/friends_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

</LinearLayout>
