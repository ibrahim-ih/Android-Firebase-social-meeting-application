<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ngenious.ibrahim.liny.main.fragment.SimpleProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/filterRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <LinearLayout
            android:id="@+id/genderLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- Gender Labes -->
<!--            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:paddingLeft="25dp"
                android:textColor="@color/cardview_dark_background"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp">

                <CheckBox
                    android:id="@+id/maleCheckBox"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    />


                <CheckBox
                    android:id="@+id/femaleCheckBox"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                </LinearLayout>
            <!--</RadioGroup>-->


        </LinearLayout>
        <Space
            android:id="@+id/spacesOne"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/genderLayout"/>
        <LinearLayout
            android:id="@+id/ageLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spacesOne"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age :"
            android:textSize="16sp"
            android:paddingLeft="25dp"
            android:textColor="@color/cardview_dark_background"/>
            <SeekBar
                android:id="@+id/ageSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="75"
                />
        </LinearLayout>
        <android.support.v4.widget.Space
            android:id="@+id/spacetwo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/ageLayout"/>
        <LinearLayout
            android:id="@+id/ageTextViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/spacetwo">
            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="18"
                android:textSize="36sp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Years Old"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spaceThree"
            android:layout_below="@+id/ageTextViewLayout"/>
        <LinearLayout
            android:id="@+id/distanceLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spaceThree"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance :"
                android:textSize="16sp"
                android:paddingLeft="25dp"
                android:textColor="@color/cardview_dark_background"/>
            <SeekBar
                android:id="@+id/distanceSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="151"
                />
        </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/spaceFour"
            android:layout_below="@id/distanceLayout"/>

        <LinearLayout
            android:id="@+id/distanceTextViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/spaceFour">
            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="100"
                android:textSize="36sp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

    </RelativeLayout>